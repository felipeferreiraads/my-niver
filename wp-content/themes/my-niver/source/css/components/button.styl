.button
    display: inline-block
    background: $color.primary
    border: none
    border-radius: 6px
    padding: 12px 50px
    cursor pointer
    color: #fff
    font-weight: 500
    text-transform: uppercase
    transition: .3s
    &:hover
        background-color: darken($color.primary, 20%)
    &.green
        background-color: $color.secondary
        &:hover
            background-color: darken($color.secondary, 20%)