.home-video
    padding: 120px 0 0
    position relative
    p
        color: #4e4e4e
        text-align: center
        margin-top: 50px
    .video-wrapper
        width: 980px
        max-width 100%
        height: 500px
        margin: 80px auto 0
        padding: 20px 20px 0 20px
        border-radius: 20px 20px 0 0
        box-shadow: 0 9px 20px rgba(0, 0, 0, 0.1)
        background-color: #f9f9f9
        iframe
            width: 100%
            height: 100%
            display: block
            border-radius: 20px 20px 0 0
    .decorator
        position: absolute
        top: 0
        left 0