.blog-title
    padding: 80px 0
    +below($bp.lg)
        padding: 50px 0
    h1
        margin-bottom: 20px;
    p
        text-align: center
        color: #4E4E4E
        max-width: 1000px
        margin: 0 auto


.blog-posts
    padding-bottom: 50px
    .container
        display: flex
        flex-wrap: wrap
        padding: 0 10px
        > *
            flex: 1 1 0
            min-width 300px
            margin: 10px

.card-post
    height: 300px
    position: relative
    +above($bp.sm)
        max-width calc(50% - 10px)
    img
        width: 100%;
        height 100%
        object-fit: cover
        object-position: center
    .info
        width: 100%
        position: absolute
        bottom: 0
        left 0
        min-height: 120px
        background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.7) 100%);
        color: #fff
        padding: 20px
        h2
            font-weight: 500
            font-size: 24px
            margin-bottom: 5px

.pagination
    display: flex
    justify-content: center
    align-items: center
    padding-top: 20px
    > *
        color: #4e4e4e
        font-size: 18px
        &:not(:last-child)
            margin-right: 10px
        &.current
            color: $color.primary
    a
        transition: .2s
        &:hover
            color: $color.primary
