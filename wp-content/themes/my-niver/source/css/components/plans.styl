.plans
    padding: 50px 0 80px
    position relative
    .container
        p
            text-align: center
            margin: 50px 0
    .grid
        display: flex
        justify-content: center
    .decorator
        position: absolute
        top: -30%
        right:  0
        z-index: -1
     .decorator-2
        position: absolute
        bottom: -150px
        left 0

.card-plan
    display: flex
    flex-direction: column
    max-width: 295px
    background: #FBFBFB
    box-shadow: -10px 9px 20px rgba(0, 0, 0, 0.06);
    border-radius: 8px
    padding 20px
    figure
        width: 100%
        height: 140px
        margin-bottom 20px
        img 
            width: 100%
            height 100%
            object-fit: contain
            object-position: center
    .price
        font-size: 38px
        color: $color.secondary
        text-align: center
    .list
        color #4e4e4e
        font-size: 12px
        text-align: center
        margin-bottom 10px
    .sub
        margin-bottom 40px
    .taxies
        text-align: center
        font-size: 8px
        margin: 30px 0 10px
        opacity: 0.4